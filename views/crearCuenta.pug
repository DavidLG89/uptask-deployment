doctype html
html(lang="en")
    head
        include partial/header
    body.login
        .contenedor-formulario
            h1 Crea una cuenta en UpTask

            if locals.mensajes
                .alertas 
                    each categoria in Object.keys(locals.mensajes)
                        each error in mensajes[categoria]
                            .alerta(class=`${categoria}`)
                                p= error
        
            form#formulario.caja.caja-login(method='POST', action='/crear-cuenta')
                .campo
                    label(for="email") E-mail:
                    input(type="email" name='email' placeHolder='nombreUsuario@mail.com', value= email)
                .campo
                    label(for='password') Contraseña:
                    input(type="password" name='password' placeHolder='Contraseña', value= password)
                .campo.enviar
                    input.boton(type='submit' value='Crear Cuenta')
                .campo
                    a(href="/iniciar-sesion") Volver a Iniciar Sesion 